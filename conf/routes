


GET     /                           controllers.Application.index

GET		/widgets					controllers.Application.listWidgets()

GET		/widgets/:id				controllers.Application.findWidget(id: Int)

DELETE	/widgets/:id				controllers.Application.deleteWidget(id: Int)

POST    /widgets					controllers.Application.createWidget()

PUT		/widgets/:id				controllers.Application.updateWidget(id: Int)


### USERS

GET 		/users				controllers.UserController.listUsers()

GET 		/users/:id			controllers.UserController.findUser(id: Int)

POST 		/users              controllers.UserController.createUser()

PUT 		/users/:id              controllers.UserController.updateUser(id:Int)

DELETE 	   /users/:id          controllers.UserController.deleteUser(id:Int)



OPTIONS  /                           controllers.Application.options(path="")
OPTIONS  /*path                      controllers.Application.options(path)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
